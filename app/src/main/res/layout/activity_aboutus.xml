    <ImageButton
        android:id="@+id/but44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/toast_frame"
        app:layout_constraintBottom_toTopOf="@+id/but43"
        app:layout_constraintEnd_toEndOf="@+id/but45"
        app:layout_constraintStart_toStartOf="@+id/but45"
        app:layout_constraintTop_toBottomOf="@+id/but45"
        app:srcCompat="@drawable/about_icon_youtube" />

    <ImageButton
        android:id="@+id/but43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/toast_frame"
        app:layout_constraintBottom_toTopOf="@+id/but41"
        app:layout_constraintEnd_toEndOf="@+id/but44"
        app:layout_constraintStart_toStartOf="@+id/but44"
        app:layout_constraintTop_toBottomOf="@+id/but44"
        app:srcCompat="@drawable/about_icon_twitter" />

    <ImageButton
        android:id="@+id/but41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@android:drawable/toast_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/but43"
        app:layout_constraintStart_toStartOf="@+id/but43"
        app:layout_constraintTop_toBottomOf="@+id/but43"
        app:srcCompat="@drawable/about_icon_instagram" />

    <ImageButton
        android:id="@+id/but45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/toast_frame"
        app:layout_constraintBottom_toTopOf="@+id/but44"
        app:layout_constraintEnd_toEndOf="@+id/but42"
        app:layout_constraintStart_toStartOf="@+id/but42"
        app:layout_constraintTop_toBottomOf="@+id/but42"
        app:srcCompat="@drawable/about_icon_github" />

</androidx.constraintlayout.widget.ConstraintLayout>